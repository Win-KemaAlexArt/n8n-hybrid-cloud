{
  "name": "N8N Hybrid Cloud",
  "image": "node:20-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true
    }
  },
  "forwardPorts": [5678, 3000],
  "portsAttributes": {
    "5678": {
      "label": "N8N Web Interface",
      "onAutoForward": "openBrowser"
    },
    "3000": {
      "label": "Development Server",
      "onAutoForward": "openBrowser"
    }
  },
  "postCreateCommand": "sudo npm install -g n8n && echo 'N8N installed successfully'",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-json"
      ]
    }
  },
  "remoteUser": "node"
}
